# Configuration Développement Sonelgaz IA
# Copier ce fichier en .env et remplir les valeurs

# Application
APP_NAME=Sonelgaz IA Panne Detection
APP_VERSION=2.0.0
DEBUG=True

# SCADA
SCADA_ENDPOINT=opc.tcp://localhost:4840
SCADA_USERNAME=test_user
SCADA_PASSWORD=test_password

# Sécurité
JWT_SECRET_KEY=dev-secret-key-change-in-production
ENCRYPTION_KEY=dev-encryption-key-32-chars-long

# Base de données (optionnel)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sonelgaz_dev
DB_USER=postgres
DB_PASSWORD=postgres

# API Sonelgaz
SONELGAZ_API_ENDPOINT=https://api-test.sonelgaz.dz
API_KEY=test-api-key-123

# Email (pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@sonelgaz.dz
SMTP_PASSWORD=

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=app.log